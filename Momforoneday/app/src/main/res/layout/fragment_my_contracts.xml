<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/hv_contracts">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                android:id="@+id/toolbar_contratos"
                app:layout_scrollFlags="scroll|enterAlways"
                android:background="@color/colorPrimary"
                android:layout_marginLeft="-50px"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/app_icon"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"/>

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/perfil_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:backgroundTint="@color/colorPrimary"
                        app:borderWidth="0dp"
                        app:elevation="0dp"
                        app:fabSize="mini"
                        app:rippleColor="@color/colorPrimary"
                        android:alpha="0.8"
                        android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
                        android:tint="@android:color/white"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:rotation="180"/>

                </RelativeLayout>
            </android.support.v7.widget.Toolbar>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#9fc4c4c4">
            </View>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="24dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:id="@+id/caregiver_img"
                            android:scaleType="centerCrop"
                            android:src="@drawable/foto_caregiver"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/caregiver_name"
                                android:text="Carla Ferreira"
                                android:textColor="#515151"
                                android:textSize="18sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/caregiver_course"
                                android:text="Psicologia"
                                android:textSize="12sp"/>

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/contract_status"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="start"
                                android:src="@android:drawable/presence_online"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="36dp"/>

                        </RelativeLayout>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="260dp"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:layout_margin="24dp"
                        android:id="@+id/image_to_show"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/crianca_comendo"
                        android:visibility="gone"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="12dp"
                        android:id="@+id/notification_layout">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="{{ nome }}"
                            android:layout_marginTop="8dp"
                            android:id="@+id/notification_text"
                            android:textSize="16sp"
                            android:textColor="#515151"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="4dp"
                            android:layout_centerVertical="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="{{ date }}"
                            android:layout_below="@id/notification_text"
                            android:id="@+id/notification_date"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="12dp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:text="PEDIR FOTO"
                            android:id="@+id/request_image"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textColor="#515151"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:textStyle="bold"/>

                        <TextView
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:layout_width="165dp"
                            android:layout_height="40dp"
                            android:text="NOTIFICAÇÕES ANTIGAS"
                            android:id="@+id/recent_notifications"
                            android:gravity="center"
                            android:layout_marginLeft="10dp"
                            android:textAlignment="center"
                            android:textColor="#515151"
                            android:textStyle="bold"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"/>

                    </RelativeLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>