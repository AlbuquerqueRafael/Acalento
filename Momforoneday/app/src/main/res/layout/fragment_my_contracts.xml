<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/hv_contracts">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/toolbarColors"
            android:id="@+id/my_toolbar">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/caregiver_img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="3dp"
                    android:layout_marginRight="4dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_account_circle_black_24dp"
                    android:tint="@android:color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:text="{{ nome }}"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@id/caregiver_img"
                    android:id="@+id/caregiver_name"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:text="{{ age }}"
                    android:layout_toRightOf="@id/caregiver_img"
                    android:id="@+id/contract_status"
                    android:textSize="20sp"
                    android:layout_below="@id/caregiver_name"
                    android:layout_marginBottom="6dp"/>

            </RelativeLayout>

            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/perfil_btn"
                android:tint="@android:color/white"
                android:layout_gravity="end"
                android:layout_marginRight="10dp"
                app:rippleColor="@color/colorPrimaryDark"
                app:fabSize="mini"
                app:backgroundTint="@color/toolbarColors"
                app:elevation="0dp"
                app:borderWidth="0dp"
                app:srcCompat="?android:attr/homeAsUpIndicator"
                android:rotation="180"/>

        </android.support.v7.widget.Toolbar>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#32d9d9d9">
        </View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notificações recentes"
                android:id="@+id/notification_tv"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"/>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_below="@id/notification_tv"
                android:layout_centerHorizontal="true">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"/>

            </android.support.v7.widget.CardView>


        </RelativeLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/request_image"
            android:background="@drawable/rounded_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text=""
            android:textColor="@android:color/white"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/no_contracts"
        android:visibility="gone">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/toolbar_nc"
            android:background="@color/toolbarColors">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contratos"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                android:id="@+id/contract_tb_tv"
                android:textColor="@android:color/white"
                android:layout_gravity="center_vertical"/>

        </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/image_ng"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:tint="@color/toolbarColors"
                android:src="@drawable/ic_thumb_down_outline_white_48dp"
                android:scaleX="-1"
                android:layout_margin="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nenhum contrato realizado"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/image_ng"/>

            <android.support.v7.widget.AppCompatButton
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:text="Procurar Cuidadores"
                android:textColor="@android:color/white"
                android:id="@+id/search_contracts"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rounded_button"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_below="@+id/image_ng"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>