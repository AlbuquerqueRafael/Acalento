<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90e79489">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/logo_img"
        android:src="@drawable/common_plus_signin_btn_icon_dark_normal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/name_textview"
        android:text="Acalento"
        android:textSize="24sp"
        android:layout_marginBottom="15dp"
        android:layout_above="@id/logo_img"
        android:textColor="@android:color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/slogan_textview"
        android:layout_centerHorizontal="true"
        android:text="No busão tem a solução"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/logo_img"
        android:textColor="@android:color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/layout_login"
        android:layout_marginTop="15dp"
        android:layout_below="@id/logo_img"
        android:visibility="gone"
        android:scaleX="0"
        android:scaleY="0">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <EditText android:id="@+id/matricula_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Matrícula"
                android:textColor="@android:color/white"
                android:textSize="16sp"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp">
            <EditText android:id="@+id/password_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@android:color/white"
                android:hint="Senha"
                android:textSize="16sp"/>
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register_textview"
            android:text="Ainda não possui conta? Registre-se!"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:textColor="@android:color/white"/>

    </LinearLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/login_btn"
        android:background="@drawable/rounded_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="Entrar"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>